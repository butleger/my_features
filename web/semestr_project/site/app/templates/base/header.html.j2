{% extends 'base/footer.html.j2' %}


{% block header %}
<div class="header">
    <div class="nav">
      {% if headers %}
        <ul>
        {% for elem in headers %}
            <li class="elem"><a href="{{ elem.url }}" class="ref">{{ elem.title }}</a></li>
        {% endfor %}
        <li class="elem">
          <div class="login_menu ref">
            <div class="dropdown-title">Auth</div>
            <ul class="dropdown-content">
              <li class="elem"><a class="ref" href="/auth/login">Login</a></li>
              {% if current_user.is_authenticated %}
                <li class="elem"><a class="ref" href="/auth/home">Home</a></li>
                <li class="elem"><a class="ref" href="/auth/logout">Logout</a></li>
              {% endif %}
              {% if current_user.nickname == "Fedor" %}
                  <li class="elem"><a class="ref" href="/auth/create_user">Create User</a></li>
              {% endif %}
            </ul>
          </div>
        </li>
        </ul>
      {% else %}
      <span>Some shit with headers!</span>
      {% endif %}
    </div>
</div>
{% endblock %}
